# ============================================
# Environment Configuration
# ============================================
# Copy this file to .env and update values
# ============================================

# --- AWS / LocalStack ---
AWS_ENDPOINT_URL=http://localhost:4566
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_DEFAULT_REGION=us-east-1

# LocalStack Pro Token (optional - for Pro features)
# Get your token from: https://app.localstack.cloud/
LOCALSTACK_TOKEN=

# --- S3 Bucket Names ---
# These buckets are synced with local folders:
#   smart-logistics-data     <-> ./data
#   mlflow-model-registry    <-> ./models
S3_DATA_BUCKET=smart-logistics-data
S3_MODEL_REGISTRY_BUCKET=mlflow-model-registry

# --- PostgreSQL ---
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=mlflow
POSTGRES_PASSWORD=mlflow
POSTGRES_DB=mlflow

# --- MLflow ---
MLFLOW_TRACKING_URI=http://localhost:5001
MLFLOW_S3_ENDPOINT_URL=http://localhost:4566
MLFLOW_ARTIFACT_ROOT=s3://mlflow-model-registry

# --- Debug ---
DEBUG=0
