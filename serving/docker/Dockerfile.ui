# ============================================
# Dockerfile - Streamlit UI
# ============================================
# Streamlit web interface for model predictions
# ============================================

FROM python:3.12-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    && rm -rf /var/lib/apt/lists/*

# Copy dependency files
COPY pyproject.toml poetry.lock* ./

# Install Poetry
RUN pip install --no-cache-dir poetry && \
    poetry config virtualenvs.create false

# Update lock file if needed and install dependencies (only main, no dev dependencies)
# --no-root skips installing the current project (we copy src/ separately)
# streamlit and requests are already in pyproject.toml
RUN poetry lock --no-interaction || true && \
    poetry install --no-interaction --only main --no-root

# Copy application code
COPY src/ /app/src/

# Expose port
EXPOSE 8501

# Run Streamlit
CMD ["streamlit", "run", "src/serving/ui.py", "--server.port=8501", "--server.address=0.0.0.0"]
